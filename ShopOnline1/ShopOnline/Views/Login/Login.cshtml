<!-- Page Heading -->
<section class="page-heading">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Please Login</h1>
            </div>
            <div class="col-md-6">
                <ul class="breadcrumb">
                    <li><a href="~/Home/Index">Home</a></li>
                    <li class="active">Login</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- Page Heading / End -->


<section class="page-content">
    <div class="container">

        <div class="row">

            @Html.Partial("OperationMessage")
            <form action="~/Login/doLogin" id="contact-form" method="post">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Login Name <span class="required">*</span></label>
                        <input type="text" value="@ViewData["txtusername"]" required="required" class="form-control" name="txtusername" id="txtusername">
                    </div>
                    <div class="form-group">
                        <label>Password <span class="required">*</span></label>
                        <input type="password" value="@ViewData["txtPassword"]" required="required" class="form-control" name="txtPassword" id="txtPassword">
                    </div>
                    <div>
                        <input type="submit" value="Login" class="btn btn-success" data-loading-text="Loading...">
                    </div>
                </div>

            </form>

        </div>


    </div>
</section>


<script>
    $(document).ready(function () {
        $('#contact-form').formValidation({
            framework: 'bootstrap',
            excluded: [':disabled'],
            //icon: {
            //    valid: 'glyphicon glyphicon-ok',
            //    invalid: 'glyphicon glyphicon-remove',
            //    validating: 'glyphicon glyphicon-refresh'
            //},

            fields: {
                txtusername: {
                    validators: {
                        notEmpty: {
                            message: 'The login name is required'
                        }
                    }
                },
                txtPassword: {
                    validators: {
                        notEmpty: {
                            message: 'The password is required'
                        }
                    }
                }
            }


        });
    });
</script>


