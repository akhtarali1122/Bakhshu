<div class="navbar-container" id="navbar-container">
    <div class="navbar-header pull-left">
        <a href="~/Home/ShopIndex" class="navbar-brand">
            <small>
                Shop Online
            </small>
        </a><!-- /.brand -->
    </div><!-- /.navbar-header -->

    <div class="navbar-header pull-right" role="navigation">

        <ul class="nav ace-nav">
            <li class="light-blue">
                @if (new ShopOnline.Filters.UserSession().isUserLogin() == true)
                {
                    <a href="#" style="float: left; margin-right:3px">Messages<i class="glyphicon glyphicon-envelope"></i></a>
                    <a href="#" style="float: left; margin-right:3px">Notification</a>

                    @*<a href="#" style="float: left; margin-right:3px" class="dropdown dropdown-extended dropdown-notification" title="Messages"><i class="icon-envelope"></i></a>
                            http://www.keenthemes.com/preview/metronic/theme/templates/admin2/components_form_tools.html?editor1=#
                        <a href="#" style="float: left; margin-right:3px" class="dropdown dropdown-extended dropdown-notification" title="Notifications"><i class="icon-bell"></i></a>*@



                    ShopOnline.Models.User user = new ShopOnline.Filters.UserSession().getUserSession();
                    string userName = user.UserFirstName + " " + user.UserLastName;
                    string userPhoto = "BlankImage.png";

                    if (user != null)
                    {
                        if (!string.IsNullOrWhiteSpace(user.ProfilePhoto))
                        {
                            userPhoto = new ShopOnline.Filters.UserSession().getUserSession().ProfilePhoto;
                        }
                    }




                    <a data-toggle="dropdown" style="float: left" href="wsdindex.html#" class="dropdown-toggle">
                        <img class="nav-user-photo" src="~/UploadedImagesThumbnails/@userPhoto" alt="@userName" />
                        <span class="user-info">
                            <small>Welcome,</small>
                            @userName
                        </span>
                        <i class="icon-caret-down"></i>
                    </a>

                    <ul class="user-menu pull-right dropdown-menu dropdown-yellow dropdown-caret dropdown-close">

                        <li>
                            <a href="~/Home/ShopIndex">
                                <i class="icon-home"></i>
                                Home
                            </a>
                        </li>

                        <li>
                            <a href="~/Home/DashBoard">
                                <i class="icon-dashboard"></i>
                                DashBoard
                            </a>
                        </li>

                        <li>
                            <a href="~/Settings/ChangePasswordForm">
                                <i class="icon-lock"></i>
                                Change Password
                            </a>
                        </li>

                        <li class="divider"></li>

                        <li>
                            <a href="~/Login/Logout">
                                <i class="icon-off"></i>
                                Log Out
                            </a>
                        </li>
                    </ul>

                    user = null;

                }
                else
                {

                    <a href="~/Login/Index" style="float: left; margin-right: 5px; background-color: #438eb9">Sign In</a>
                    <a href="~/Register/Index" style="float: left; background-color: #438eb9">Sign Up</a>
                }
            </li>






        </ul><!-- /.ace-nav -->


    </div><!-- /.navbar-header -->
